<p id="notice"><%= notice %></p>

<div class="container">
<h1>Listing Visitors for <%= @event.name %></h1>
<%= link_to "New Visitor for #{@event.name}", new_event_visitor_path(@event),class: 'btn btn-xs btn-info pull-right' %>
<%= link_to "Download visitors for #{@event.name}", event_export_path(@event),method: :post,class: 'btn btn-xs btn-primary pull-right' %>


    <div class="scholarship-search col-md-12 col-sm-12 col-centered">
      <%= bootstrap_form_tag url: event_visitors_path(@event), :method => 'get' do |f| %>
        <%= f.collection_select :user_id, User.all.order(:name), :id, :name, { :prompt => 'Choose a User...',:hide_label => true } %>
        <%= f.submit 'Search' %>
      <% end %>
    </div>
<br>
<!--<div class="table-responsive"> -->
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th>Designation</th>
      <th>Contact number</th>
      <th>Email</th>
      <th>Filled by</th>
      <th>Event</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @visitors.each do |visitor| %>
      <tr>
        <td><%= visitor.name %></td>
        <td><%= visitor.company %></td>
        <td><%= visitor.designation %></td>
        <td><%= visitor.contact_number %></td>
        <td><%= visitor.email %></td>
        <td><%= visitor.user.name %></td>
        <td><%= visitor.event.name %></td>
        <td><%= link_to 'Show', event_visitor_path(@event.id,visitor.id) %></td>
        <!--<td><= link_to 'Edit', edit_event_visitor_path(@event.id,visitor.id) %></td>-->
        <!--<td><= link_to 'Destroy', event_visitor_path(@event), method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        
        
      </tr>
    <% end %>
  </tbody>
</table>
<!--</div>-->
<br>
<%= link_to 'Back to Events', events_path %>

</div>
