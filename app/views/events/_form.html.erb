<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :event_type %><br>
    <!--<= f.number_field :event_type %>-->
    <%= f.select(:event_type, Event.event_types.keys.map {|key| [key.humanize, key]}) %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_area :location %>
  </div>
  <div class="field">
    <%= f.label :no_of_days %><br>
    <%= f.number_field :no_of_days %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
