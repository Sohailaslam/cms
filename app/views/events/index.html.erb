<p id="notice"><%= notice %></p>

<div class="container">
<h1>Listing Events</h1>
<div class="table-responsive"> 
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Event Name</th>    
      <!--<th>Event type</th>-->
      <!--<th>Location</th>-->
      <!--<th>No of days</th>-->
      <th>Visitors</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <!--<td><3%= event.event_type %></td>-->
        <!--<td><3%= event.location %></td>-->
        <!--<td><3%= event.no_of_days %></td>-->
        <td><%= link_to 'Add Visitors', new_event_visitor_path(event), class: "btn btn-success btn-xs"%>&nbsp;<%= link_to 'Show Visitors', event_visitors_path(event),class: "btn btn-info btn-xs" %></td>
        
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<% if can? :update, Event %>
<%= link_to 'New Event', new_event_path %>
<% end %>
<%= link_to 'Back', root_path %>

</div>